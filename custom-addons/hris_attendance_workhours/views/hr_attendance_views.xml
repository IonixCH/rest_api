<odoo>
    <record id="view_hr_attendance_form_workhours" model="ir.ui.view">
        <field name="name">hr.attendance.form.workhours</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <field name="check_out" position="after">
                <field name="working_hours"/>
            </field>
        </field>
    </record>

    <record id="view_hr_attendance_tree_workhours" model="ir.ui.view">
        <field name="name">hr.attendance.tree.workhours</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <field name="check_out" position="after">
                <field name="working_hours"/>
            </field>
        </field>
    </record>
</odoo>
